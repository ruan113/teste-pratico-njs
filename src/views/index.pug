html
    head
        meta(charset="UTF-8")
        title Teste Pratico

        // bootstrap
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")

        link(rel="stylesheet" type="text/css" href="css/style.css")

    body
        div.background-filter
            div.logo.d-flex
                i.fas.fa-map-marker-alt
                h3 City Search

        section#main
            div.wrap-left-panel.float-left
                div.left-panel
                    form(method="POST" action="/search")
                        div.searchbar-container
                            label Digite o nome de uma cidade:
                            div.d-flex
                                input.form-control(placeholder="ex. Itajubá")
                                button(type="submit" class="btn btn-green") Procurar
                    div.result-container.mt-3
                        div.result__info-panel
                            div.d-flex.center
                                div.indicator-container
                                    i.fas.fa-city
                                    div.wrap-text
                                        span Amparo-SP
                                div.indicator-container
                                    i.fas.fa-globe-americas
                                    div.wrap-text
                                        span Brasil
                        div.result__info-panel.mt-2
                            div.d-flex.center
                                div.indicator-container
                                    i.fas.fa-thermometer-half
                                    div.wrap-text
                                        span 10°C
                                div.indicator-container
                                    i.fas.fa-tint
                                    div.wrap-text
                                        span 10%
                                div.indicator-container
                                    i.fas.fa-cloud-sun
                                    div.wrap-text
                                        span Chuvoso
            div.wrap-right-panel.float-right
                div.right-panel
                    div.top-results
                        h4 Top 5 Cidades Mais Buscadas
                        ol
                            li
                                a(href="") Amparo-SP
                            li
                                a(href="") Itajuba-MG
                            li
                                a(href="") Santa Rita do Sapucai-MG
                            li
                                a(href="") Campinas-SP
                            li
                                a(href="") Pedreira-SP
                    div.last-results
                        h4 Últimas Cidades Pesquisadas
                        ol
                            li
                                a(href="") Amparo-SP
                            li
                                a(href="") Itajuba-MG
                            li
                                a(href="") Santa Rita do Sapucai-MG

        section#footer
            div
                span Made By Ruan Michel Adabo

        // bootstrap
        script(src = "https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous")

        script(src = "https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
            integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
            crossorigin="anonymous")

        script(src = "https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
            integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
            crossorigin="anonymous")
        // fontawesome
        script(src = "https://kit.fontawesome.com/339d4e6b9a.js" crossorigin = "anonymous")
