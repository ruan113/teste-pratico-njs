    body
        section#main
            div.wrap-left-panel.float-left
                div.left-panel
                    div.searchbar-container.d-flex(style='display: none')
                        span Digite a Cidade
                        input(name="cityName" type="text" class="form-control")
                    div.result__info-panel(style='display: none')
                        h4#cityName São Francisco, EUA
                        small#data Sábado, 12:30 PM, Ensolarado
                        h3#temp 23°C
                        div.humidity-info.d-flex
                            i.fas.fa-cloud-download-alt
                            span#humidity 48%
                        i.fas.fa-cloud
                    div.not-found
                        span Digite uma cidade!
            div.wrap-right-panel.float-left
                div.right-panel
                    div.top-results-panel
                        span Top 5 cidades mais pesquisadas
                        div.no-results
                            span Não há cidades no top 5!
                        div.cities-container
                    div.last-results
                        ul

        //Javascript responsável pelos eventos e pesquisas AJAX
        script(src="javascript/weather-panel.js")
